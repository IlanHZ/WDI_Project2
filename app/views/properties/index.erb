<h2>All properties</h2>
<ul class="media-list">
  <% @properties.each do |property| %>
  <div class="row">
    <div class="col-xs-6 col-md-4">
      <div class="thumbnail">
        <li class="media">
          <div class="media-left">
            <a href="/properties/<%= property.id %>">

              <h3 class="media-heading"><%= property.owner%></h3>
            </a>
            <p>
            <%= property.price %>
            </p>
            <p><a href="#" class="btn btn-primary" role="button">Check all the informations about this property </a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </li>
  <% end %>
</ul>

