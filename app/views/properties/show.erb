<div class="row">
  <div class="thumbnail">
    <div class="col-md-6">Property Informations
      <img class="media-object" src="/images/default.png" >
      
      <p>Price: <%= @property.price %></p>
      <p>Property type: <%= @property.property_type %></p>
      <p>Number of free rooms: <%= @property.number_of_rooms %></p>
      <p>Comments: <%= @property.comment %></p>
    </div>
    <div class="col-md-6">Owner Profile 
     <img class="media-object" src="/images/default.png" >

      <p>First Name: <%= @property.user.first_name %> </p>
      <p>Last Name: <%= @property.user.last_name %> </p> 
      <button><a href="/users/<%= @property.user.id %>">Check the owner's profil </a></button>

    </div>

    
  </div>
</div>

