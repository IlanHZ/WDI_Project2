<h2>Register</h2>
<% @user.errors.full_messages.each do |error| %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= error %>
  </div>
<% end %>
<form id="register" method="post" action="/register">
  <div class="form-group">
    <label for="first_name">First name</label>
    <input name="user[first_name]" type="text" class="form-control" id="username" placeholder="First name" placeholder="First name">
  </div>
  <div class="form-group">
    <label for="last_name">Last name</label>
    <input name="user[last_name]" type="text" class="form-control" id="username" placeholder="Last name" placeholder="Last name">
  </div>
  <div class="form-group">
    <label for="username">Username</label>
    <input name="user[username]" type="text" class="form-control" id="username" placeholder="Username">
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    <input name="user[email]" type="email" class="form-control" id="email" placeholder="Email">
  </div>
  <div class="form-group">
    <label for="gender">Gender</label>
    <input type="radio" name="gender" value="male"> Male<br>
    <input type="radio" name="gender" value="female"> Female<br>
    <input type="radio" name="gender" value="other"> Other
  </div>
  <div class="form-group">
    <label for="age">Age</label>
    <input name="user[age]" type="number" class="form-control" id="age" placeholder="age">
  </div>
  <div class="form-group">
    <label for="comments">Comments</label>
    <input name="user[comments]" type="text" class="form-control" id="comments" placeholder="comments">
  </div>
  <button type="submit" class="btn btn-default">Create</button>
</form>
